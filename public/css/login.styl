body
	font-family 'Open Sans', sans-serif
	font-size 14px
	margin 0
h2
	font-weight 300
	font-size 30px
	font-family 'Quicksand', sans-serif
	margin 0
	padding 0
.clear
	clear both
.panel
	width 400px
	height 200px
	position absolute
	top 50%
	margin-top -100px
	left 50%
	margin-left -200px
	#divider
		width 100%
		height 5px
		background-color #E5E5E5
		margin 5px 0 20px
		.blip
			width 40px
			height 100%
			float right
		#one
			background-color #008cff
		#two
			background-color #FF1172
		#three
			background-color #99CC14
	label
		float left
		width 40%
		margin-right 5%
	input
		border 1px solid #CCC
		outline none !important
		font-size 12px
		margin-bottom 5px
		padding 3px
		width 50%
		float right
	#submit
		float right
		margin-top 20px
		font-family 'Quicksand', sans-serif
		font-weight 400
		font-size 18px
		cursor pointer
		&:hover
			color #FF1172